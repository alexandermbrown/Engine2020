{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "make",
            "type": "shell",
            "command": "make",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "absolute"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            },
            "dependsOn": [
                "premake"
            ]
        },
        {
            "label": "premake",
            "type": "process",
            "command": "${workspaceFolder}/bin/premake/linux64/premake5",
            "args": [
                "gmake2"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "make AssetBase release",
            "type": "shell",
            "command": "make config=release AssetBase",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "absolute"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            },
            "dependsOn": [
                "premake"
            ]
        },
        {
            "label": "build assets",
            "type": "process",
            "command": "${workspaceFolder}/build/Release-linux-x86_64/AssetBase/AssetBase",
            "options": {
                "cwd": "${workspaceFolder}/AssetBase"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "dependsOn": [
                "make AssetBase release"
            ],
            "problemMatcher": []
        },
        {
            "label": "build and copy assets",
            "type": "shell",
            "command": "cp -R ${workspaceFolder}/AssetBase/output/* ${workspaceFolder}/Article/data",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "dependsOn": [
                "build assets"
            ],
            "problemMatcher": []
        },
        {
            "label": "setup linux",
            "type": "shell",
            "command": "${workspaceFolder}/bin/Linux-Setup.sh",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        }
    ]
}
