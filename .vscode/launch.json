{
    "version": "2.0.0",
    "configurations": [
        {
            "name": "(gdb) Launch Article",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/Debug-linux-x86_64/Article/Article",
            "cwd": "${workspaceFolder}/Article",
            "environment": [
                { "name": "MESA_GL_VERSION_OVERRIDE", "value": "4.5" },
                { "name": "MESA_GLSL_VERSION_OVERRIDE", "value": "450" }
            ],
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "make"
        },
        {
            "name": "(gdb) Build Assets",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/Debug-linux-x86_64/AssetBase/AssetBase",
            "cwd": "${workspaceFolder}/AssetBase",
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "make"
        }
    ]
}